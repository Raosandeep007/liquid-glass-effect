{
  "name": "liquid-glass-effect",
  "version": "1.0.0",
  "description": "A lightweight JavaScript library for creating iOS-inspired liquid glass visual effects with customizable parameters",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c && cp src/index.d.ts dist/index.d.ts",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "glass",
    "glassmorphism",
    "liquid-glass",
    "frosted-glass",
    "backdrop-filter",
    "ui-effect",
    "visual-effect",
    "ios",
    "css-effects"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/liquid-glass-effect.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/liquid-glass-effect/issues"
  },
  "homepage": "https://github.com/yourusername/liquid-glass-effect#readme",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.9.0",
    "rollup-plugin-postcss": "^4.0.2"
  },
  "browserslist": [
    "chrome >= 90",
    "edge >= 90"
  ]
}
